<div class="container">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <% if current_user %>
          <div class="pull-right">
            <button class="btn btn-primary" data-toggle="modal" data-target="#createModal">Add</button>
          </div>
        <% end %>
        <strong>Manage Inventories</strong>
      </div>
      <div class="panel-body">
        <% if !current_user %>
          <div class="alert alert-info">
            Inventories are only available if you log in.
          </div>
        <% elsif !@inventories.nil? && @inventories.size > 0 %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <td>
                  <strong>Name</strong>
                </td>
                <td>
                  <strong>#Unique Cards</strong>
                </td>
              </thead>
              <% @inventories.each do |inventory| %>
                <tr>
                  <td>
                    <%= inventory.name %>
                  </td>
                  <td>
                    <%= inventory.cards.size %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        <% else %>
          <div class="alert alert-info">
            No inventories found for user <%= current_user.id %>.
          </div>
        <% end %>
      </div>
      <div class="panel-footer"></div>
    </div>
  </div>
</div>

<%= render partial: "new_inventory" %>
